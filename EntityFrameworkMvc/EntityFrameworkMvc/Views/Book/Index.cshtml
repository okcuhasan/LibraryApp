@model List<EntityFrameworkMvc.Models.Book>

@{

}


<script src="~/js/deleteBook.js"></script>


<form id="bookIndexForm">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold">Book List</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div id="table-scroll" class="table-responsive">
                <table id="veriTable" class="table table rounded" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Book ID</th>
                            <th>Book Name</th>
                            <th>Book Description</th>
                            <th>Book Year Of Publication</th>
                            <th>Writer Of The Book</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BookId</td>
                                    <td>@item.BookName</td>
                                    <td>@item.BookDescription</td>
                                    <td>@item.BookYearOfPublication</td>
                                    <td>@item.Author.AuthorName</td>
                                    <td>
                                        <button type="submit" class="btn btn-primary" asp-action="Update" asp-controller="Book" asp-route-id="@item.BookId">Update Book</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Book" onclick="deleteBookFunction('@item.BookId')">Delete Book</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
@model List<EntityFrameworkMvc.Models.AuthorProfile>

@{

}

<script src="~/js/deleteauthorprofile.js"></script>

<form id="authorIndexForm">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold">Author Profiles List</h6>
        </div>
        <div class="card-body">
            <div class="row">
            </div>
            <div id="table-scroll" class="table-responsive">
                <table id="veriTable" class="table table rounded" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Author Profile ID</th>
                            <th>Social Media</th>
                            <th>WebSite</th>
                            <th>Author Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AuthorProfileId</td>
                                    <td>@item.SocialMedia</td>
                                    <td>@item.WebSite</td>
                                    <td>@item.Author?.AuthorName</td>
                                    <td>
                                        <button type="submit" class="btn btn-primary" asp-action="Update" asp-controller="AuthorProfile" asp-route-id="@item.AuthorProfileId">Update Author Profile</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger" asp-action="Delete" asp-controller="AuthorProfile" onclick="deleteAuthorProfileFunction('@item.AuthorProfileId')">Delete Author Profile</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>